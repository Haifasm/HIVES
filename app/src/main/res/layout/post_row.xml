<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/hiveimg"
            android:layout_width="85dp"
            android:layout_height="74dp"
            android:src="@drawable/honey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.993"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.028" />

        <TextView
            android:id="@+id/post_title"
            android:layout_width="85dp"
            android:layout_height="18dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/post_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.006"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_date"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/hive_name"
            android:layout_width="192dp"
            android:layout_height="40dp"
            android:gravity="right"
            android:text="Hive Name"
            android:textColor="#070606"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/post_image"
            app:layout_constraintEnd_toStartOf="@+id/hiveimg"
            app:layout_constraintHorizontal_bias="0.919"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.082" />

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="388dp"
            android:layout_height="175dp"
            android:layout_marginBottom="52dp"
            android:scaleType="centerCrop"
            android:src="@drawable/honey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/post_content"
            android:layout_width="341dp"
            android:layout_height="120dp"
            android:layout_marginTop="41dp"
            android:layout_marginBottom="108dp"
            android:gravity="right"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/post_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.409"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/post_title"
            app:layout_constraintVertical_bias="0.109" />

        <TextView
            android:id="@+id/post_date"
            android:layout_width="81dp"
            android:layout_height="19dp"
            android:layout_marginBottom="188dp"
            android:text="date"
            app:layout_constraintBottom_toTopOf="@+id/post_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="141dp"
            android:layout_height="25dp"
            android:gravity="right"
            android:text="TextView"
            android:textColor="#070404"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/post_content"
            app:layout_constraintEnd_toStartOf="@+id/hiveimg"
            app:layout_constraintHorizontal_bias="0.963"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hive_name"
            app:layout_constraintVertical_bias="0.333" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>