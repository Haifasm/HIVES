<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    android:layout_margin="4dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userimginactivity"
            android:layout_width="85dp"
            android:layout_height="74dp"
            android:src="@drawable/honey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/commentby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="username"
            android:textColor="#070606"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/userimginactivity"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" علق على رحيقك"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/commentdesc"
            app:layout_constraintEnd_toStartOf="@+id/commentby" />


        <TextView
            android:id="@+id/commentdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="85dp"
            android:gravity="right"
            android:text="activity"
            android:textColor="#070606"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/commentby"
             />


        <TextView
            android:id="@+id/comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التاريخ"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userimginactivity" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@+id/comment_date"
            app:layout_constraintTop_toBottomOf="@+id/userimginactivity"/>

        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الوقت"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/userimginactivity"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>