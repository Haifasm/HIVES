<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="SigninActivity">

    <include
        android:id="@+id/viewHiveToolBar"
        layout="@layout/profile_bar"
        android:layout_width="411dp"
        android:layout_height="111dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تسجيل الدخول"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="@+id/viewHiveToolBar"
        app:layout_constraintStart_toStartOf="@+id/viewHiveToolBar"
        app:layout_constraintTop_toTopOf="@+id/viewHiveToolBar" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="358dp"
        android:layout_height="535dp"
        android:background="@drawable/bourder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.653">


    </FrameLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="166dp"
        android:layout_height="98dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/regName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frameLayout"
        app:srcCompat="@drawable/logoonly" />


    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="البريد الإلكتروني"
        android:textColor="#322120"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/signin_Mail"
        app:layout_constraintEnd_toEndOf="@+id/signin_Mail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="#DD0404"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/signin_Mail"
        app:layout_constraintEnd_toStartOf="@+id/textView14" />

    <EditText
        android:id="@+id/signin_Mail"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/sginin_style"
        android:ems="10"
        android:hint="البريد الإلكتروني"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="كلمة المرور"
        android:textColor="#322120"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/signin_Password"
        app:layout_constraintEnd_toEndOf="@+id/signin_Password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="#DD0404"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/signin_Password"
        app:layout_constraintEnd_toStartOf="@+id/textView15" />

    <EditText
        android:id="@+id/signin_Password"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/sginin_style"
        android:ems="10"
        android:gravity="top|right"
        android:hint="كلمة المرور"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toBottomOf="@+id/signin_Mail" />


    <TextView
        android:id="@+id/forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="هل نسيت كلمة المرور؟"
        android:textColor="#3D51B8"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/signin_Password"
        app:layout_constraintTop_toBottomOf="@+id/signin_Password" />

    <Button

        android:id="@+id/signinBtn"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:background="#F8C471"
        android:text="تسجيل الدخول"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin_Password"
        app:layout_constraintVertical_bias="0.192" />


    <Button
        android:id="@+id/gosignup"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="73dp"
        android:background="#D8D2D2"
        android:text="التسجيل "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signinBtn"
        app:layout_constraintVertical_bias="0.216" />


</androidx.constraintlayout.widget.ConstraintLayout>




